{
    "name": "aplus/language",
    "description": "Aplus Framework Language Library",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "language",
        "lang",
        "locale",
        "localization",
        "internationalization",
        "i18n",
        "l10n",
        "intl"
    ],
    "authors": [
        {
            "name": "Natan Felles",
            "email": "natanfelles@gmail.com",
            "homepage": "https://natanfelles.github.io"
        }
    ],
    "homepage": "https://aplus-framework.com/packages/language",
    "support": {
        "email": "support@aplus-framework.com",
        "issues": "https://gitlab.com/aplus-framework/libraries/language/issues",
        "forum": "https://aplus-framework.com/forum",
        "source": "https://gitlab.com/aplus-framework/libraries/language",
        "docs": "https://docs.aplus-framework.com/guides/libraries/language/"
    },
    "funding": [
        {
            "type": "Aplus Sponsor",
            "url": "https://aplus-framework.com/sponsor"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-intl": "*",
        "aplus/debug": "^2.4",
        "aplus/helpers": "^2.3"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "aplus/coding-standard": "^1.12",
        "ergebnis/composer-normalize": "^2.23",
        "jetbrains/phpstorm-attributes": "^1.0",
        "phpmd/phpmd": "^2.11",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.5"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Framework\\Language\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Language\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
